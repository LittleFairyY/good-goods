/* pages/mine/mine.wxss */
page{
  width:100%;
  height:100%;
  box-sizing: border-box;
  background:#eee;
}
view{
  box-sizing: border-box;
}
.hw-mine-body{
  width:100%;
  height:100%;
}
.hw-mine-top{
  width:100%;
  height:282rpx;
  overflow: hidden;
  position: relative;
}
.hw-mine-top>image{
  /* width: 750rpx; */
  /* height:452rpx; */
  position: absolute;
  width:100%;
  bottom:0;
  left:0;
}
.hw-mint-top-info{
  position: absolute;
  width:50%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin: auto;
}
.hw-mine-top-loginImg{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.hw-mine-top-loginImg>image{
  width:100%;
  height:100%;
}
.hw-mine-top-name{
  width: 100%;
  color:#fff;
  font-size: 28rpx;
}
.hw-mine-top-name{
  text-align: center;
  background:transparent;
  border:0;
  list-style: none;
}

.hw-mine-myOder{
  height:80rpx;
  color:#666;
  padding:15rpx;
  font-size: 30rpx;
  width:100%;
  display: flex;
  background:#fff;
  justify-content: space-between; 
}
.hw-mine-myOder-text{
 width:150rpx;
}
.hw-mine-myOder-icon>image{
  width:20rpx;
  height:30rpx;
  margin-left:10rpx;
}
.hw-mine-nav{
  display: flex;
  padding: 30rpx;
  background:#fff;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.hw-mine-nav-item{
  width:140rpx;
  /* height:70rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.hw-mine-nav-item>image{
  width:50rpx;
  height:39rpx;
  margin-bottom: 10rpx;
}
.hw-mine-nav-item>text{
  font-size: 28rpx;
  color:#666;
}
.hw-mine-other{
  background:#fff;
  color:#666;
  font-size: 28rpx;
}
.hw-mine-other-item{
  height:100rpx;
  line-height: 100rpx;
  padding:0 30rpx;
  border-bottom:1rpx solid #eee;
}
.hw-mine-link{
  background:#fff;
  font-size: 28rpx;
  color:#666;
  width:100%;
  height:400rpx;
  padding:80rpx 0;
}
.hw-mine-link-text{
  text-align: center;
  height:60rpx;
  line-height: 60rpx;
  width:100%;
}
.hw-min-link-nav{
  display: flex;
  justify-content: center;
  align-items: center;
}
.hw-min-link-nav-item{
  display: flex;
  flex: 1;
  height:200rpx;
  margin-left:30rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.hw-min-link-nav-item>image{
  width:50rpx;
  height:70rpx;
  margin-bottom:20rpx;
}
.hw-min-link-nav-item:nth-child(2)>image{
  width:70rpx;
  height:70rpx;
}
.hw-min-link-nav-item:nth-child(3)>image{
  width:78rpx;
  height:70rpx;
}