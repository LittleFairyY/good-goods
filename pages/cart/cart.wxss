/* pages/cart/cart.wxss */
page{
  width:100%;
  height:100%;
}
::-webkit-scrollbar{
  display: none;
}
view{
  box-sizing: border-box;
}
.hw-cart{
  width:100%;
  height:100%;
  background:#fff;
  display: flex;
  flex-direction: column;
}

.hw-cart-body{
  flex:1;
  width:100%;
  overflow-x: hidden;
}
.hw-cart-item{
  height:200rpx;
  width:100%;
  border-bottom:1px solid #eee;
  display: flex;
  align-items: center;
  padding:0 30rpx;
}
.hw-cart-item>image{
  width:140rpx;
  height:140rpx;
}
.hw-cart-item-info{
  margin-left:20rpx;
  font-size: 28rpx;
  color:#666;
  line-height: 50rpx;
}
.hw-cart-item-info-name{
  color:#555;
}
.hw-cart-item-info-gg{
  font-size: 24rpx;
}
.hw-cart-item-info-gg>text{
  margin-right:20rpx;
}
.hw-cart-item-info-count{
  border:1rpx solid #666;
  border-radius: 10rpx;
  width:200rpx;
  display: flex;
  justify-content: center;
}
.hw-cart-item-info-count>text{
  flex:1;
  text-align: center;
}
.hw-cart-item-dele{
  text-align: right;
  flex: 1;
}
.hw-cart-item-dele>image{
  width:36rpx;
  height:36rpx;
}
.hw-cart-item-price{
  color:#f50;
  font-size: 30rpx;
  margin-top:20rpx;
}


.hw-cart-item-info-count>text + text{
   border-left:1rpx solid #666;
}

.hw-cart-footer{
  height:100rpx;
  width:100%;
  border-top:1px solid #eee;
  display:flex;
  justify-content: space-between;
  padding:0 30rpx;
  align-items: center;
  font-size: 28rpx;
  color:#666;
}
.hw-cart-footer-allsele{
  display: flex;
}
.hw-cart-footer-allsele>checkbox-group{
  margin-left:20rpx;
}
.hw-cart-footer-text{
  display: flex;
}
.hw-cart-footer-price{
  color:#f50;
  font-size: 30rpx;
}
.hw-cart-footer-btn{}
.hw-cart-footer-btn>button{
  background:#FFD914;
  margin:0;
  line-height: 60rpx;
  font-size: 28rpx;
  color:#444;
}